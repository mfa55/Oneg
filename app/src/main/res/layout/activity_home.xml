<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jram_mack.oneg.HomeActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@color/light_gray"
        android:id="@+id/separator12"
        />
    <Button
    android:layout_height="50dp"
    android:layout_alignTop="@id/separator12"
    android:id="@+id/home3"
    android:drawableTop="@drawable/home_red"
    android:text="Home"
    android:background="@drawable/edgerect"

    android:textSize="10sp"
    android:textAlignment="center"
    android:textColor="@android:color/darker_gray"
    android:layout_width="93dp" />


    <Button

        android:layout_height="50dp"
        android:id="@+id/requestButton3"
        android:drawableTop="@drawable/hospital_grey"
        android:background="@drawable/edgerect"
        android:text="Request"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"


        android:layout_toRightOf="@+id/home3"
        android:layout_toEndOf="@+id/home3"
        android:layout_alignTop="@id/separator12"
        android:layout_width="93dp" />

    <Button

        android:layout_height="50dp"
        android:id="@+id/myReq3"
        android:drawableTop="@drawable/my_grey"
        android:background="@drawable/edgerect"
        android:textColor="@color/light_gray"
        android:layout_alignTop="@id/separator12"
        android:text="My Requests"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_below="@+id/recyclerView"
        android:layout_toRightOf="@+id/requestButton3"
        android:layout_toEndOf="@+id/requestButton3"
        android:layout_width="93dp" />
    <Button
        android:layout_height="50dp"
        android:background="@drawable/edgerect"
        android:text="Accepted"
        android:id="@+id/AcceptedHome"
        android:layout_toRightOf="@+id/myReq3"
        android:layout_alignTop="@id/separator12"
        android:drawableTop="@drawable/acceptedgrey"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textColor="@color/light_gray"
        android:layout_width="98dp" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="470dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
