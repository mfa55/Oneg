<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardviewwew3"
        android:layout_height="190dp"
        android:layout_margin="2dp"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle3"
                android:text="Title"
                android:textSize="19dp"
                android:textColor="@android:color/background_dark" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescription3"
                android:text="Description"
                android:textSize="17dp"
                android:textColor="@android:color/background_dark"
                android:layout_alignTop="@id/txtTitle3"
                android:layout_marginTop="20dp"
                />
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:id="@+id/seperator10"
                android:layout_marginTop="150dp"

                android:background="@color/light_gray"
                android:layout_centerHorizontal="true"

                />
            <ImageButton
                android:layout_width="22dp"
                android:layout_marginTop="10dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_alignTop="@id/seperator10"
                android:id="@+id/circlecall2"
                android:background="@drawable/circle_button"
                android:layout_alignRight="@id/txtDescription"
                android:layout_marginLeft="10dp"


                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>