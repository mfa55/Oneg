<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jram_mack.oneg.MainActivity"
    android:background="@drawable/background12"
    >
    <View
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/rectangle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/RectangleView" />

    <Button
        android:text="Log In"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/buttonLogIn"

        android:background="@drawable/button_capsule"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="33dp"
        android:layout_alignBottom="@+id/TextRegister"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Not registered? Click here."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextRegister"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textStyle="normal|bold|italic"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/RectangleView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/phoneNumberSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textAlignment="center"
        android:layout_alignTop="@+id/RectangleView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
