<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="jram_mack.oneg.MyRequestsActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="470dp"


        android:layout_alignParentTop="true"
        android:layout_above="@+id/MyrequestButton" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@color/light_gray"
        android:id="@+id/separator4"
        />
    <Button
        android:layout_height="50dp"
        android:layout_alignTop="@id/separator4"
        android:id="@+id/myHome"
        android:drawableTop="@drawable/home_grey"
        android:text="Home"
        android:background="@drawable/edgerect"

        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:layout_width="93dp" />

    <Button
        android:text="Request"
        android:layout_alignTop="@id/separator4"
        android:layout_height="50dp"
        android:id="@+id/MyrequestButton"

        android:drawableTop="@drawable/hospital_grey"
        android:background="@drawable/edgerect"
        android:textColor="@color/light_gray"
        android:layout_toRightOf="@id/myHome"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_width="93dp" />
    <Button

        android:layout_height="50dp"
        android:id="@+id/myReq3"
        android:drawableTop="@drawable/my_red"
        android:background="@drawable/edgerect"
        android:textColor="@color/light_gray"
        android:layout_alignTop="@id/separator4"
        android:text="My Requests"
        android:textSize="10sp"
        android:textAlignment="center"

        android:layout_toRightOf="@id/MyrequestButton"

        android:layout_width="93dp" />
    <Button
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:background="@drawable/edgerect"
        android:id="@+id/AcceptedMyRequests"
        android:text="Accepted"
        android:layout_toRightOf="@+id/myReq3"
        android:layout_alignTop="@id/separator4"
        android:drawableTop="@drawable/acceptedgrey"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textColor="@color/light_gray" />



</RelativeLayout>
